extends layout
block headScripts
    script(src='/javascripts/login.js')

block mainContainer
    div.formBox
        div
            form(id='login-form')
                fieldset
                    div(id='login-field-username')
                        label(for='username') User ID:
                        input(type='text', name='username')
                    div(id='login-field-password')
                        label(for='password') Password:
                        input(type='password', name='password')
                    div.error
                    div
                        input(type='button', value='Login', id='login-submit')
                        input(type='button', value='Create Account', id='createUser-submit')